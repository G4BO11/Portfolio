---
interface Props {
	mini?: boolean
	titulo: string
	source: string
	linkaso? : string
}

const { mini, titulo, source, linkaso } = Astro.props
---

<a
	href={linkaso}
	class:list={[
		`
                 hover:transition-collors ease flex w-full cursor-pointer flex-col items-center gap-y-4 overflow-hidden rounded-xl border-2 border-gray-600 bg-[#272C38] p-6 transition-all duration-300 hover:border-[#4f5a73] hover:bg-[#313745]
                 md:flex-row md:justify-center md:gap-x-[8%]
                 lg:max-w-[430px] lg:items-start lg:justify-start lg:gap-0
                `,
		{
			'no-mini group md:h-[300px] lg:flex-col lg:gap-4 2xl:h-[350px]': !mini,
			'md:h-[280px]': mini
		}
	]}
>
	<h3
		class="flex font-sans text-2xl font-bold text-white md:pl-2 md:text-4xl lg:text-3xl group-[.no-mini]:lg:self-center"
	>
		{titulo}
	</h3>
	<img
		src={source}
		loading="lazy"
		alt="Imagen Respectiva del proyecto"
		class="w-fill gap-x max-h-72 md:max-h-[250px] lg:max-h-72 group-[.no-mini]:lg:mt-0"
	/>
</a>
<style></style>
