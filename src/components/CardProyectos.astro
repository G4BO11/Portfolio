---
interface Props{
    mini? : boolean,
    titulo : string,
    source : string
}

const { mini, titulo, source} = Astro.props;
---

<a class:list={[`
                 bg-[#272C38] rounded-xl w-full flex flex-col p-6 gap-y-4 items-center overflow-hidden border-2 border-gray-600 cursor-pointer hover:bg-[#313745] transition-all hover:transition-collors ease duration-300
                 md:flex-row md:justify-center md:gap-x-[8%]
                 lg:max-w-[430px] lg:items-start lg:justify-start lg:gap-0
                `,
        {
            "md:h-[340px] group no-mini lg:flex-col lg:gap-4": !mini,
            "md:h-[300px]": mini
        }
    ]}>
    <h3 class="text-white font-sans text-2xl font-bold md:text-4xl lg:text-3xl flex group-[.no-mini]:lg:self-center">{titulo}</h3>
    <img src={source} loading="lazy" alt="Imagen Respectiva del proyecto" class="w-fill mt-4 max-h-72 gap-x md:max-h-[300px] lg:max-h-72 group-[.no-mini]:lg:mt-0"/>
</a>
