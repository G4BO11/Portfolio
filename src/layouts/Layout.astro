---
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
	style: string
}

const { title, style } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="https://em-content.zobj.net/source/apple/354/victory-hand_270c-fe0f.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class={style} transition:animate="initial">
		<slot />
	</body>
</html>
<style is:global>
	@import url(https://fonts.googleapis.com/css?family=DM+Sans:100,200,300,regular,500,600,700,800,900,100italic,200italic,300italic,italic,500italic,600italic,700italic,800italic,900italic);
</style>